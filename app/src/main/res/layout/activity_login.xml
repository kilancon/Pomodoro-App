<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/light_brown">
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:text="Ahihi"
        app:layout_constraintTop_toBottomOf="@+id/btnClose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/icMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail"
        app:layout_constraintTop_toTopOf="@+id/emailInput"
        app:layout_constraintBottom_toBottomOf="@+id/emailInput"
        app:layout_constraintLeft_toLeftOf="@+id/line1" />
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:hint="Email address"
        android:textColorHint="@color/brown2"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintLeft_toRightOf="@id/icMail"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/thin_line"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:id="@+id/icLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock"
        app:tint="@color/brown2"
        app:layout_constraintLeft_toLeftOf="@+id/line1"
        app:layout_constraintTop_toTopOf="@+id/pwdInput"
        app:layout_constraintBottom_toBottomOf="@+id/pwdInput"/>
    <EditText
        android:id="@+id/pwdInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textSize="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/brown2"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="@+id/emailInput"
        android:layout_marginTop="26dp"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/thin_line"
        app:layout_constraintTop_toBottomOf="@+id/pwdInput"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textColor="@color/brown2"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Sign In"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/rec50rad" />
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/thin_line"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Sign Up"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:background="@drawable/rec50rad"
        app:backgroundTint="@color/brown2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>