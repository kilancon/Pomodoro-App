<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_brown"
    >

    <TextView
        android:id="@+id/tvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen time"
        android:textColor="@color/brown"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/stat_option"
        app:layout_constraintBottom_toBottomOf="@+id/tvvv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_spinner"
        android:layout_marginRight="15dp"
        android:popupBackground="@drawable/pu_bg_spinner"
        />
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="17dp"
        android:textColor="@color/brown"
        app:layout_constraintTop_toBottomOf="@+id/tvvv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnback"
        app:tint="@color/brown"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/tvDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tvDate"/>
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnnext"
        android:background="@color/transparent"
        app:tint="@color/brown"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/tvDate"
        app:layout_constraintLeft_toLeftOf="@id/tvDate"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tvDate"/>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_edittext"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="12dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvTotaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00h 00m"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="45dp"
            android:padding="15dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total time wasted"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/hihi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintLeft_toLeftOf="@id/tvvv"
        android:layout_marginTop="25dp"
        android:text="Top 4 apps used"
        android:textSize="17dp"
        android:textColor="@color/brown2"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hihi"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="13dp"
        android:paddingEnd="13dp"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/thin_line"
        app:layout_constraintTop_toBottomOf="@+id/recycleView"
        android:layout_margin="30dp"/>
    <Button
        android:id="@+id/btnViewmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View more"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/line1"/>
</androidx.constraintlayout.widget.ConstraintLayout>