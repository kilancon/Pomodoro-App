<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="7"
    android:background="@drawable/bg_item_task"
    android:layout_marginBottom="15dp"
    android:paddingEnd="10dp">
    <ImageButton
        android:id="@+id/btnCheck"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/btncheck"
        android:background="@drawable/btncheck"
        android:layout_gravity="center"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="21dp"
        />

    <TextView
        android:id="@+id/tvTaskname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:text="Write an article"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvTaskest"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="1/3"
        android:layout_weight="2"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:layout_gravity="center"/>
    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnplay"
        android:background="@drawable/btnplay"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        />
</LinearLayout>